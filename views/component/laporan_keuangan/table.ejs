<table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Nama Menu</th>
        <th scope="col">Harga Menu</th>
        <th scope="col">Jumlah Pembelian</th>
        <th scope="col">Total Harga</th>

      </tr>
    </thead>
    <tbody>
        <% data.forEach((element,key)=>{%>
            <tr>
              <th scope="row"><%= key+1 %> </th>
              <td><%= element.idMenu===null?"Menu sudah di Hapus":element.idMenu.name %> </td>
              <td><%= element.idMenu===null?"Menu sudah di Hapus":element.idMenu.price %> </td>
              <th scope="col"><%= element.jumlah %> </th>
              <th scope="col"><%= element.totalPrice%></th>
    
            </tr>
            <%})%>
    </tbody>
  </table>
  <!-- Button trigger modal -->
  
  <!-- Modal -->
  <div
    class="modal fade"
    id="modalEditMenu"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Edit Menu</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/editMenu?_method=PUT" method="POST">
             <!-- <div class="form-group">
                    <label for="id_supplier">ID Supplier</label>
                    <select class="form-control" id="id_supplier" name="id_supplier">
                     
                    </select>
                  </div> -->
                  <input hidden type="text" class="form-control name-menu" name="id" id="id_menu">
              
                  <div class="form-group" >
                      <label for="name_menu">Nama Barang</label>
                      <input type="text" class="form-control name-menu" name="name_menu" id="name_menu" placeholder="Kopi">
                    </div>
                    <div class="form-group">
                      <label for="id_supplier"> Masuk</label>
                      <select aria-readonly="true" class="form-control" id="id_barang" name="id_barang">
                
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="name">Bahan</label>
                      <input readonly type="text" class="form-control name-barang" name="name_bahan" id="name_bahan" placeholder="Kopi">
                    </div>
                     
                    <div class="form-group">
                      <label for="type">Tipe</label>
                      <select class="form-control" id="type" name="type">
                        <option value="true">Makanan</option>
                        <option value="false">Minuman</option>
                      </select>  
                    </div>
                      <div class="form-group">
                        <label for="jumlah">Jumlah Bahan Terpakai</label>
                        <input type="number" class="form-control" name="jumlah" id="jumlah" placeholder="5">
                      </div>    
                      <div class="form-group">
                        <label for="price">Harga Satuan</label>
                        <input type="number" class="form-control" name="price" id="price" placeholder="50000">
                      </div>     
   
  
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      </form>
      </div>
    </div>
  </div>
  <div
    class="modal fade"
    id="modalDelete"
    tabindex="-1"
    role="dialog"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Delete Menu</h5>
          <button
            type="button"
            class="close"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="/deleteMenu?_method=DELETE" method="POST">
                      <div class="form-group">
                        <p>Item ini akan di hapus</p>
                        <input hidden readonly type="text" class="form-control" name="id" id="id_menus">
                      </div>     
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-green" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-danger">Delete</button>
        </div>
      </form>
      </div>
    </div>
  </div>
  <script>
  $(".table").on("click","#btn_edit",function(){
      const id=$(this).data("id")
      const name=$(this).data("name")
      const type=$(this).data("type")
      const price=$(this).data("price")
      const stock=$(this).data("stock")
      $("#name_menu").val(name)
      $("#type").val(String(type))
      $("#jumlah").val(stock)
      $("#price").val(price)
      $("#id_menu").val(id)
  })
  $(".table").on("click","#btn_delete",function(){
      const id=$(this).data("id")
      $("#id_menus").val(id)
  
  })
    
  
  </script>
  