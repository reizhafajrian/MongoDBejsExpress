    <h1 class="h2">Tambah Supplier</h1>
       
        <form class="form-supplier" action="/supplier/add" method="POST">
            <div class="form-group">
              <label for="name">Nama</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="Arigo">
            </div>
          <div class="form-group">
            <label for="address">Address</label>
            <textarea class="form-control" name="address" id="address" placeholder="Jl Juanda Depok" rows="3"></textarea>
            </div>
          <div class="form-group">
            <label for="phone">Phone</label>
            <input type="number" class="form-control" name="phone" id="phone" placeholder="0812126891028">
          </div>
         
          <button type="submit" class="btn btn-primary">Save</button>
        </form>